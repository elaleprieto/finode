					div.col-sm-12
						| Cuentas

		div.col-sm-9
			div(data-ng-controller=RegistrosController)
				div.row
					div.col-sm-12
						table.table
							tbody
								tr
									td.col-sm-1
										| Beneficiario
									
									td.col-sm-7
