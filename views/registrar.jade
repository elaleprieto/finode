										| Fecha
									
									td.col-sm-3
										input(data-ng-model="registro.date" type="text").col-sm-12
								
								tr
									td.col-sm-1
										| Notas
									
									td.col-sm-7
										input(data-ng-model="registro.notes" type="text").col-sm-12
									
									td.col-sm-1
										| Cantidad
									
									td.col-sm-3
										input(data-ng-model="registro.amount" type="text").col-sm-12
								
								tr
									td.col-sm-1
										| Reconciliado
									
									td.col-sm-7
										input(data-ng-model="registro.reconciled" type="checkbox").col-sm-12
									
